<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/five_dp"/>
            <solid android:color="@color/white"/>
            <stroke android:color="@color/yellow" android:width="@dimen/one_dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/five_dp"/>
            <solid android:color="@color/white"/>
            <stroke android:color="@color/yellow" android:width="@dimen/one_dp"/>
            <padding android:bottom="@dimen/ten_dp" android:left="@dimen/ten_dp" android:top="@dimen/ten_dp" android:right="@dimen/ten_dp"/>
        </shape>
    </item>
</selector>